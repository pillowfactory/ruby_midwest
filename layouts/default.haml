---
extension: html
filter:
  - erb
  - haml
---
!!! Strict
%html{ "xml:lang" => "en", :lang => "en-us", :xmlns => "http://www.w3.org/1999/xhtml" }
  %head
    %meta{ :content => "text/html; charset=utf-8", "http-equiv" => "content-type" }
    %title
      = @page.title
    %meta{ :name => "author", :content => "#{@page.author}" }
    %link{ :href => "/css/framework.css", :rel => "stylesheet", :type => "text/css", :media => "screen, projection" }
    %link{ :href => "/css/site.css", :rel => "stylesheet", :type => "text/css", :media => "screen, projection" }
    %script{:src => '/javascripts/jquery.js', :type => 'text/javascript'}
    %script{:src => '/facebox/facebox.js', :type => 'text/javascript'}
    %link{:href => "/facebox/facebox.css", :media=> "screen", :rel => "stylesheet", :type=> "text/css"}
    %script{:src => '/javascripts/application.js', :type => 'text/javascript'}
    %script{:src => '/javascripts/rubymidwest.js', :type => 'text/javascript'}
  %body
    #master
      #header.container
        %h1#rmw 
          %a{:href => '/'} Ruby Midwest

      #lower
        #nav.container
          -# %ul
            -# %li
              -# %a{:href => '/location.html'} Location
            -# %li
              -# %a{:href => '/program.html'} Program
            -# %li
              -# %a{:href => '/about.html'} About
            -# %li
              -# %a{:href => '/sponsors.html'} Sponsors
        #content.container
          = @content
        #pasture
          #footer
            .container
              #credits
                %small
                  design &amp; development by
                  %a{:href => 'http://cremalab.com'}
                    %img{:src => '/images/CremaLab_Logo.png', :alt => 'CremaLab'}
                  +
                  %a{:href => 'http://relativelyearly.com'}
                    %img#red{:src => '/images/red_logo.png', :alt => 'Relatively Early Development'}
    %script{ :type => "text/javascript" }
      var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
      document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
    %script{ :type => "text/javascript" }
      try {
      var pageTracker = _gat._getTracker("UA-13101573-1");
      pageTracker._trackPageview();
      } catch(err) {}

